package com.deitel.deitalpractice;

import java.util.Scanner;

public class Exercise_4_20 {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		Scanner input = new Scanner(System.in);
		int numberOfCitizens = 5;
		int counter = 0;
		while(numberOfCitizens > 0) {
			System.out.printf("Enter the earning of citizen %d", counter + 1);
			double earnings = input.nextInt();
			if (earnings > 30_000) {
				System.out.printf("Payable tax for Citizen %d is %f", counter + 1, (double)(0.2 * earnings));
			}
			numberOfCitizens--;
			counter++;
		}
	}

}
