package org.example;

import java.sql.Connection;
import java.sql.DriverManager;
import java.sql.PreparedStatement;
import java.sql.ResultSet;

public class App {
    public String getGreeting() {
    	String host = "localhost";   // Postgres host
        String port = "30007";       // NodePort from postgres.yaml
        String database = "mydb";    // DB name
        String user = "dbuser";      // DB username
        String password = "dbpass";  // DB password

        // Add valid timezone (Asia/Kolkata) to avoid error
        String url = String.format(
            "jdbc:postgresql://%s:%s/%s?options=-c%%20TimeZone=Asia/Kolkata",
            host, port, database
        );

        try {
            Class.forName("org.postgresql.Driver");
            Connection conn = DriverManager.getConnection(url, user, password);
            System.out.println("✅ Connected to PostgreSQL successfully!");

            String sql = "SELECT version()";
            PreparedStatement stmt = conn.prepareStatement(sql);
            ResultSet rs = stmt.executeQuery();

            if (rs.next()) {
                System.out.println("PostgreSQL version: " + rs.getString(1));
            }

            rs.close();
            stmt.close();
            conn.close();
        } catch (Exception e) {
            System.err.println("❌ Connection failed: " + e.getMessage());
            e.printStackTrace();
        }
    }

    public static void main(String[] args) {
       new App().getGreeting();
    }
}
