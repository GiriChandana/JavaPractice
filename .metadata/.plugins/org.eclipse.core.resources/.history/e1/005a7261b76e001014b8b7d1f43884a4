package com.deitel.deitalpractice;

public class Clock {

	// instance variables
	private int hour;
	private int minute;
	private int second;

	// constructor
	public Clock(int hour, int minute, int second) {
		if (hour > 23) {
			this.hour = 0;
		} else {
			this.hour = hour;
		}
		this.hour = hour;
		this.minute = minute;
		this.second = second;

	}

	// setters

	public void setHour(int hour) {
		
	}

	public void setMinute(int minute) {
		if (minute > 59) {
			this.minute = 0;
		} else {
			this.minute = minute;
		}
	}

	public void setSecond(int second) {
		if (second > 59) {
			this.second = 0;
		} else {
			this.second = second;
		}
	}

	// getters

	public int getHour() {
		return hour;
	}

	public int getMinute() {
		return minute;
	}

	public int getSecond() {
		return second;
	}

}
