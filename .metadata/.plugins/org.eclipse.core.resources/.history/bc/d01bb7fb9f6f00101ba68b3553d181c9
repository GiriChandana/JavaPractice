package com.deitel.deitalpractice;

import java.util.Scanner;

public class HeartRatesTest {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		Scanner input = new Scanner(System.in);
		
		System.out.print("Enter firstName: ");
		String firstName = input.nextLine();
		System.out.print("Enter lastName: ");
		String lastName = input.nextLine();
		System.out.print("Enter day from your date of birth: " );
		int dob_Day = input.nextInt();
		System.out.print("Enter month from your date of birth: " );
		int dob_Month = input.nextInt();
		System.out.print("Enter year from your date of birth: " );
		int dob_Year = input.nextInt();
		
		HeartRates heartRate = new HeartRates(firstName, lastName, dob_Day, dob_Month, dob_Year);
		
		System.out.println();
		System.out.println("The details of the person: ");
		int age = heartRate.calculateAge(dob_Day, dob_Month, dob_Year);
		System.out.printf("Name = %s %s, Age = %d%n",  heartRate.getFirstName(), heartRate.getLastName(), age );
		System.out.printf("Maximum HeartRate = %d%n", heartRate.calculateMaxHeartRate(age));
	}

}
